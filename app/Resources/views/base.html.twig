<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
          <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
          <!-- Latest compiled and minified CSS -->
          <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
          <link rel="stylesheet" href="{{ asset('css/estilos.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    </head>
    <body>
        <header>
          <h1>Padel Valencia</h1>
        </header>
        <nav class="navbar navbar-inverse">
      		  <section class="container-fluid">
      		    <article class="navbar-header">
      		      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
      		        <span class="icon-bar"></span>
      		        <span class="icon-bar"></span>
      		        <span class="icon-bar"></span>
      		      </button>
      		      <a class="navbar-brand active" href="{{ path('padel_homepage') }}">PadelValencia</a>
      		    </article>
      		    <article class="collapse navbar-collapse" id="myNavbar">
      		      <ul class="nav navbar-nav">
      		        <li ><a href="{{ path('padel_partidas') }}">Partidas</a></li>
      		        <li><a href="{{ path('padel_torneos') }}">Jugadores</a></li>
                  <li><a href="{{ path('padel_form') }}">Insertar jugador</a></li>
      		      </ul>
      		      <ul class="nav navbar-nav navbar-right">
                  {% if is_granted('ROLE_ADMIN') == false %}
                  <li><a href="{{ path('usuario_insertar') }}"><span class="glyphicon glyphicon-user"></span> Registro usuario</a></li>
                  <li><a href="{{ path('usuario_logado') }}"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                  {% endif %}
                  {% if is_granted('ROLE_ADMIN') %}
                  <li><a href="{{ path('logout') }}"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                  {% endif %}
      		      </ul>
      		    </article>
      		  </section>
      	</nav>
        <section class="container caja">
          <section class="main row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              {% block body %}{% endblock %}
            </article>
          </section>
        </section>
        <footer>
          <div class="container-fluid">
            <h3>footer</h3>
          </div>
        </footer>
        {% block javascripts %}
        <script src="http://code.jquery.com/jquery-latest.js"></script>
      	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
