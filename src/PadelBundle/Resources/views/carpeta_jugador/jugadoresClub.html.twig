{% extends '::base.html.twig' %}
{% block title %}Jugadores{% endblock %}
{% block body %}
 <h3>Jugadores del club</h3>
 <table class="table table-striped table-inverse">
   <tr>
     <th>Nombre</th>
     <th>Apellidos</th>
     <th>Sexo</th>
     <th>Edad</th>
     <th>Nivel</th>
   </tr>
   {% for jugadores in tablaJugador %}
   <tr>
     <td>{{ jugadores.nombre }}</td>
     <td>{{ jugadores.apellidos }}</td>
     <td>{{ jugadores.sexo }}</td>
     <td>{{ jugadores.edad }}</td>
     <td>{{ jugadores.nivel }}</td>
     {% if is_granted('ROLE_ADMIN') %}
     <td><a href="{{path(
           'padel_formMod',
          { 'id': jugadores.id}
        )}} ">Actualizar</a></td>
        <td><a href="{{path(
         'padel_delete',
        { 'id': jugadores.id}
      )}} ">Eliminar</a></td>
{% endif %}
   </tr>
   </tr>
   {% endfor %}
 </table>
{% endblock %}
